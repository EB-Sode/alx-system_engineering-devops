#!/bin/bash
# Correct 103-water_and_stir

# Convert WATER and STIR from their alphabets to base-10
w=$(echo "$WATER" | tr 'water' '01234')
s=$(echo "$STIR" | tr 'stir.' '01234')

# Convert strings to decimal using bc (ibase=5 because water and stir are base 5)
w_dec=$(echo "ibase=5; $w" | bc)
s_dec=$(echo "ibase=5; $s" | bc)

# Add
sum=$((w_dec + s_dec))

# Convert to base bestchol (base 8 â†’ then translate digits)
result=$(echo "obase=8; $sum" | bc | tr '01234567' 'bestchol')

echo "$result"

